{
	"name": "nga-mofish",
	"displayName": "NGA-MoFish",
	"description": "",
	"version": "1.4.1",
	"publisher": "DarrenB",
	"repository": {
		"type": "git",
		"url": "https://github.com/DarrenIce/NGA-MoFish"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"nga"
	],
	"activationEvents": [
		"onView:nga-custom",
		"onCommand:nga.test",
		"onCommand:nga.login"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "nga.test",
				"title": "测试"
			},
			{
				"command": "nga.login",
				"title": "登录NGA",
				"icon": "$(sign-in)"
			},
			{
				"command": "nga.copyLink",
				"title": "复制链接"
			},
			{
				"command": "nga.copyTitleLink",
				"title": "复制标题和链接"
			},
			{
				"command": "nga.viewInBrowser",
				"title": "在浏览器中打开"
			},
			{
				"command": "nga.open",
				"title": "打开指定帖子",
				"icon": "$(new-file)"
			},
			{
				"command": "nga-custom.addNode",
				"title": "添加节点",
				"icon": "$(add)"
			},
			{
				"command": "nga-custom.refreshAll",
				"title": "刷新",
				"icon": "$(refresh)"
			},
			{
				"command": "nga-custom.refreshNode",
				"title": "刷新节点",
				"icon": "$(refresh)"
			},
			{
				"command": "nga-custom.removeNode",
				"title": "删除节点"
			},
			{
				"command": "nga.showSticker",
				"title": "是否开启小图模式",
				"icon": "$(eye)"
			},
			{
				"command": "nga.setPostNum",
				"title": "显示的帖子数量",
				"icon": "$(output)"
			},
			{
				"command": "nga.filterRead",
				"title": "过滤已读帖子",
				"icon": "$(filter)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "nga",
					"title": "NGA",
					"icon": "resources/nga.svg"
				}
			]
		},
		"views": {
			"nga": [
				{
					"id": "nga-custom",
					"name": "自定义"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "nga.login",
					"when": "view == nga-custom",
					"group": "navigation@0"
				},
				{
					"command": "nga-custom.refreshAll",
					"when": "view == nga-custom",
					"group": "navigation@1"
				},
				{
					"command": "nga-custom.addNode",
					"when": "view == nga-custom",
					"group": "navigation@2"
				},
				{
					"command": "nga.open",
					"when": "view == nga-custom",
					"group": "navigation@3"
				},
				{
					"command": "nga.showSticker",
					"when": "view == nga-custom",
					"group": "navigation@4"
				},
				{
					"command": "nga.setPostNum",
					"when": "view == nga-custom",
					"group": "navigation@5"
				},
				{
					"command": "nga.filterRead",
					"when": "view == nga-custom",
					"group": "navigation@6"
				}
			],
			"view/item/context": [
				{
					"command": "nga.copyLink",
					"when": "viewItem == item"
				},
				{
					"command": "nga.copyTitleLink",
					"when": "viewItem == item"
				},
				{
					"command": "nga.viewInBrowser",
					"when": "viewItem == item"
				},
				{
					"command": "nga-custom.refreshNode",
					"when": "view == nga-custom && viewItem == dir",
					"group": "inline"
				},
				{
					"command": "nga-custom.removeNode",
					"when": "view == nga-custom && viewItem == dir"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/iconv": "^2.1.16",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"art-template": "^4.13.2",
		"axios": "^0.21.1",
		"cheerio": "^1.0.0-rc.10",
		"encoding": "^0.1.13",
		"iconv-lite": "^0.6.2",
		"js-yaml": "^3.14.0"
	}
}
